
#include <iostream>
#include <climits>
using namespace std;


void
Sort012 (int arr[], int size)
{

  int one = 0, two = 0, zero = 0;
  for (int i = 0; i < size; i++)
    {
      if (arr[i] == 0)
	zero++;
      if (arr[i] == 1)
	one++;
      if (arr[i] == 2)
	two++;
    }

  int i = 0;

  while (zero != 0)
    {
      arr[i] = 0;
      i++;
      zero--;
    }

  while (one != 0)
    {
      arr[i] = 1;
      i++;
      one--;
    }

  while (two != 0)
    {
      arr[i] = 2;
      i++;
      two--;
    }




}





int
main ()
{
  int arr[] = { 0, 2, 1, 1, 0, 2, 2, 0, 0, 1 };
  Sort012 (arr, 10);

  for (int i = 0; i < 10; i++)
    {
      cout << arr[i] << " ";
    }



  return 0;
}
